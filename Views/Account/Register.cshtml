@model CRM_Buddies_Task.Models.UserModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<link rel="stylesheet" href="~/Content/Site.css" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container">
    <div class="form-box">
        <h2>Register</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="input-group">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new { @class = "input", required = "required" })
                @Html.ValidationMessageFor(m => m.FullName)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.Mobile)
                @Html.TextBoxFor(m => m.Mobile, new { @class = "input", required = "required" })
                @Html.ValidationMessageFor(m => m.Mobile)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "input", required = "required", type = "email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="input-group">
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City, new { @class = "input" })
            </div>

            <div class="input-group" style="position: relative;">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "input", required = "required", id = "passwordInput" })
                <i class="fa-solid fa-eye" id="togglePassword"
                   style="position:absolute; right:10px; top:37px; cursor:pointer; font-size:16px; color:#666;"></i>
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="input-group" style="position: relative;">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input", required = "required", id = "confirmPasswordInput" })
                <i class="fa-solid fa-eye" id="toggleConfirmPassword"
                   style="position:absolute; right:10px; top:37px; cursor:pointer; font-size:16px; color:#666;"></i>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <input type="submit" value="Register" class="btn" />
        }

        <p class="login-link">Already have an account? <a href="@Url.Action("Login", "Account")">Login now</a></p>
    </div>
    <div class="image-box">
        <div class="textinput" style=" margin-top: 150px; margin-left: 50px; font-size: 30px;">
            <h3><span class="typing" style="animation-delay: 1s;">Welcome!</span></h3>

            <div class="overlay-text">
                <h3>Join the community</h3>
                <p>Start your new journey today</p>
            </div>
        </div>
    </div>
</div>

@{ var success = TempData["SuccessMessage"] ?? ""; var error = TempData["ErrorMessage"] ?? ""; }

<script>
    (function () {
        var success = @Html.Raw(Json.Encode(success));
        var error = @Html.Raw(Json.Encode(error));

        function showPopup(msg, bgColor) {
            if (!msg) return;
            var popup = document.createElement('div');
            popup.textContent = msg;
            popup.style.position = 'fixed';
            popup.style.top = '20px';
            popup.style.right = '20px';
            popup.style.background = bgColor || '#4CAF50';
            popup.style.color = '#fff';
            popup.style.padding = '10px 14px';
            popup.style.borderRadius = '6px';
            popup.style.boxShadow = '0 4px 8px rgba(0,0,0,0.15)';
            popup.style.zIndex = 99999;
            popup.style.fontSize = '13px';
            document.body.appendChild(popup);
            setTimeout(function () { popup.remove(); }, 2000);
        }

        if (success) {
            showPopup(success, '#4CAF50');
        } else if (error) {
            showPopup(error, '#E53935');
        }
    })();

    document.getElementById("togglePassword").addEventListener("click", function () {
        var input = document.getElementById("passwordInput");
        if (input.type === "password") {
            input.type = "text";
            this.classList.remove("fa-eye");
            this.classList.add("fa-eye-slash");
            this.style.color = "#333";
        } else {
            input.type = "password";
            this.classList.remove("fa-eye-slash");
            this.classList.add("fa-eye");
            this.style.color = "#666";
        }
    });

    document.getElementById("toggleConfirmPassword").addEventListener("click", function () {
        var input = document.getElementById("confirmPasswordInput");
        if (input.type === "password") {
            input.type = "text";
            this.classList.remove("fa-eye");
            this.classList.add("fa-eye-slash");
            this.style.color = "#333";
        } else {
            input.type = "password";
            this.classList.remove("fa-eye-slash");
            this.classList.add("fa-eye");
            this.style.color = "#666";
        }
    });
</script>
