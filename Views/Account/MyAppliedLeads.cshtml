@{
    ViewBag.Title = "My Applied Leads";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userLeads = ViewBag.UserLeads as List<Dictionary<string, object>> ?? new List<Dictionary<string, object>>();
}

<style>
    :root {
        --gradient-start-light: #6a11cb;
        --gradient-end-light: #2575fc;
        --gradient-start-dark: #2575fc;
        --gradient-end-dark: #6a11cb;

        --text-light: #212529;
        --text-dark: #f8f9fa;

        --header-padding: 0.5rem 1rem;
        --header-radius: 0.3rem;
    }

    @@media (prefers-color-scheme: dark) {
        :root {
            --gradient-start: var(--gradient-start-dark);
            --gradient-end: var(--gradient-end-dark);
            --text-color: var(--text-dark);
        }
    }
    @@media (prefers-color-scheme: light), (forced-colors: none) {
        :root {
            --gradient-start: var(--gradient-start-light);
            --gradient-end: var(--gradient-end-light);
            --text-color: var(--text-light);
        }
    }

    .page-header {
        font-weight: 700;
        font-size: 2rem;
        background: linear-gradient(270deg, var(--gradient-start), var(--gradient-end), var(--gradient-start));
        background-size: 600% 600%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: gradientShift 12s ease infinite;
        padding: var(--header-padding);
        border-radius: var(--header-radius);
        user-select: none;
    }

    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .fade-in {
        opacity: 0;
        animation: fadeInAnim 1.2s ease forwards;
    }
    @@keyframes fadeInAnim {
        to { opacity: 1; }
    }
</style>

<div class="container pt-5 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-header"><i class="fas fa-list-check me-2"></i> My Applied Leads</h2>
        <a href="@Url.Action("ApplyForLead", "Account")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Apply for New Lead
        </a>
    </div>

    @if (userLeads.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <strong><i class="fas fa-history me-2"></i> Lead Application History</strong>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                @foreach (var key in userLeads.First().Keys.Where(k => k != "Id" && k != "CreatedByUserId" && k != "CreatedDate"))
                                {
                                    <th>@key</th>
                                }
                                <th>Applied Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < userLeads.Count; i++)
                            {
                                var lead = userLeads[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    @foreach (var key in userLeads.First().Keys.Where(k => k != "Id" && k != "CreatedByUserId" && k != "CreatedDate"))
                                    {
                                        <td>
                                            @if (lead[key] != null && lead[key] != DBNull.Value)
                                            {
                                                @lead[key].ToString()
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                    }
                                    <td>@(lead.ContainsKey("CreatedDate") && lead["CreatedDate"] != DBNull.Value ? Convert.ToDateTime(lead["CreatedDate"]).ToString("yyyy-MM-dd HH:mm") : "N/A")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-inbox fa-2x mb-3"></i>
            <h4>No leads applied yet</h4>
            <p>You haven't applied for any leads yet. Start by applying for your first lead!</p>
            <a href="@Url.Action("ApplyForLead", "Account")" class="btn btn-primary mt-2">
                <i class="fas fa-plus-circle me-1"></i> Apply for Lead
            </a>
        </div>
    }
</div>
