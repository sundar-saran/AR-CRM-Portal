@model CRM_Buddies_Task.Models.EditProfileViewModel
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="border-0">
                <div class="page-header">
                    <h4>Edit Profile</h4>
                </div>
                <div class="card-body">

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FullName)
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Mobile)
                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.City)
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn me-2 action-btn">Update</button>
                            <a href="@Url.Action("Profile", "Account")" class="btn-back">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@{
    var success = TempData["SuccessMessage"] ?? "";
}

@section Scripts {
    <script>
        (function() {
            var success = @Html.Raw(Json.Encode(success));

            function showPopup(msg, bgColor) {
                if (!msg) return;
                var popup = document.createElement('div');
                popup.textContent = msg;
                popup.style.position = 'fixed';
                popup.style.top = '20px';
                popup.style.right = '20px';
                popup.style.background = bgColor || '#4CAF50';
                popup.style.color = '#fff';
                popup.style.padding = '10px 14px';
                popup.style.borderRadius = '6px';
                popup.style.boxShadow = '0 4px 8px rgba(0,0,0,0.15)';
                popup.style.zIndex = 99999;
                popup.style.fontSize = '13px';
                document.body.appendChild(popup);

                setTimeout(function() {
                    popup.style.transition = "opacity 0.5s";
                    popup.style.opacity = 0;
                    setTimeout(function() {
                        popup.remove();
                        window.location.href = '@Url.Action("EditProfile", "Account")';
                    }, 500);
                }, 2000);
            }

            if (success) showPopup(success, '#4CAF50');
        })();
    </script>
}
