@model List<CRM_Buddies_Task.Models.LeadApplicationViewModel>

@{
    ViewBag.Title = "Manage Lead Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 theme-sensitive-text fade-in">

    <!-- HEADER -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <div class="page-header shadow-sm">
                <h2 class="mb-2">
                    <i class="bi bi-clipboard-data me-2"></i> Manage Lead Applications
                </h2>
                <p class="mb-0">
                    Review and manage submitted lead applications
                </p>
            </div>
        </div>

        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a href="@Url.Action("ManageLead", "Account")"
               class="btn btn-outline-primary primary-action-btn">
                <i class="bi bi-table me-1"></i> Manage Lead Table
            </a>
        </div>
    </div>

    <!-- FLASH MESSAGE -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info shadow-sm fade-in">
            <i class="bi bi-info-circle me-1"></i> @TempData["Message"]
        </div>
    }

    <!-- APPLICATIONS -->
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            var app = item.Application;

            <div class="card dashboard-card shadow-sm border-0 mb-4 fade-in">

                <!-- CARD HEADER -->
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <strong>
                            <i class="bi bi-file-earmark-text me-1"></i>
                            Application #@app.Id
                        </strong>
                    </div>
                    <div>
                        <small>
                            <i class="bi bi-clock me-1"></i>
                            @app.CreatedDate.ToString("dd MMM yyyy, HH:mm")
                        </small>
                    </div>
                </div>

                <!-- CARD BODY -->
                <div class="card-body">

                    <!-- USER INFO -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1">
                                <strong>User:</strong> @app.UserName
                            </p>
                            <p class="mb-0">
                                <strong>Email:</strong> @app.UserEmail
                            </p>
                        </div>
                    </div>

                    <!-- LEAD DATA TABLE -->
                    <div class="table-responsive">
                        <table class="custom-table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:30%">Field</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var field in item.LeadData)
                                {
                                    <tr>
                                        <td class="fw-semibold">
                                            @field.Key
                                        </td>
                                        <td>
                                            @if (field.Value != null && field.Value != DBNull.Value)
                                            {
                                                @field.Value.ToString()
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        }
    }
    else
    {
        <!-- EMPTY STATE -->
        <div class="alert alert-info text-center shadow-sm fade-in">
            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
            <h5 class="mb-1">No lead applications found</h5>
            <p class="mb-0 text-muted">
                There are no lead submissions available at the moment.
            </p>
        </div>
    }

</div>
