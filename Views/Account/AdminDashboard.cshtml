@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 theme-sensitive-text">

    <!-- Header -->
    <div class="row mb-4 fade-in">
        <div class="col">
            <div class="dashboard-header shadow-sm">
                <h2 class="mb-2">
                    <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
                </h2>
                <p class="mb-0">
                    Monitor system activity and manage platform operations
                </p>
            </div>
        </div>
    </div>

    <!-- Cards -->
    <div class="row g-4 fade-in">

        <!-- Total Users -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people-fill me-2"></i> Total Members
                    </h5>

                    <div class="fs-2 fw-semibold my-2">
                        @ViewBag.TotalUsers
                    </div>

                    <a href="@Url.Action("UserList", "Account")"
                       class="btn dashboard-btn btn-sm">
                        View Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Access Management -->
        <div class="col-lg-4 col-md-6">
            <div class="card dashboard-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person-gear me-2"></i> Access Management
                    </h5>

                    <p class="mb-3">
                        Assign roles and manage user permissions
                    </p>

                    <a href="@Url.Action("ManageRoles", "Account")"
                       class="btn dashboard-btn btn-sm">
                        Manage Access
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
