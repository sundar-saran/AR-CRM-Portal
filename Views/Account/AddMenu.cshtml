@model CRM_Buddies_Task.Models.MenuModel

@{
    ViewBag.Title = (Model != null && Model.MenuId > 0) ? "Edit Menu" : "Add New Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(270deg, #4ca1af, #c4e0e5);
            background-size: 400% 400%;
            animation: gradientShift 10s ease infinite;
            padding: 30px 20px;
            border-radius: 12px;
            color: #fff;
            margin-bottom: 2rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease-out forwards;
        }

        body.dark-theme .page-header {
            background: linear-gradient(270deg, #1c1c1e, #2a2a2d);
            box-shadow: 0 4px 10px rgba(0,0,0,0.7);
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            border-radius: 10px;
        }

        .card-body label {
            font-weight: 500;
        }

        body.dark-theme .form-control,
        body.dark-theme .form-control:focus {
            background-color: #2a2a2d;
            color: #f1f1f1;
            border-color: #444;
        }

        body.dark-theme .form-check-input {
            background-color: #2a2a2d;
            border-color: #555;
        }

        body.dark-theme .card {
            background-color: #1e1e1e;
            color: #f1f1f1;
        }

        body.dark-theme .text-danger {
            color: #ff6b6b !important;
        }

        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease-out forwards;
        }
    </style>
}

<div class="container-fluid pt-4 fade-in">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">@ViewBag.Title</h2>
        <a href="@Url.Action("ManageMenus", "Account")" class="btn btn-outline-light">
            <i class="fas fa-list"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            @{
                string actionName = (Model != null && Model.MenuId > 0) ? "EditMenu" : "AddMenu";
            }

            @using (Html.BeginForm(actionName, "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                if (Model != null && Model.MenuId > 0)
                {
                    @Html.HiddenFor(m => m.MenuId)
                }

                <div class="card shadow-sm">
                    <div class="card-body">

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MenuName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.MenuName, new { @class = "form-control theme-sensitive-text", placeholder = "Enter menu name (e.g., 'User Profile')" })
                            @Html.ValidationMessageFor(m => m.MenuName, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MenuURL, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.MenuURL, new { @class = "form-control theme-sensitive-text", placeholder = "Enter URL (e.g., '/Account/Profile')" })
                            @Html.ValidationMessageFor(m => m.MenuURL, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3 form-check">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
                        </div>

                        @Html.HiddenFor(m => m.IsDeleted)

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary me-md-2">
                                @(Model != null && Model.MenuId > 0 ? "Update Menu" : "Add Menu")
                            </button>
                            <a href="@Url.Action("ManageMenus", "Account")" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            }

            @if (Model != null && Model.MenuId > 0 && Model.CreatedDate.HasValue)
            {
                <div class="card mt-3 shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">Menu Details</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Created:</strong> @Model.CreatedDate.Value.ToString("yyyy-MM-dd HH:mm")</p>
                        <p>
                            <strong>Status:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Inactive</span>
                            }
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@{
    var success = TempData["SuccessMessage"] ?? "";
    var error = TempData["ErrorMessage"] ?? "";
}

<script>
    (function () {
        var success = @Html.Raw(Json.Encode(success));
        var error = @Html.Raw(Json.Encode(error));

        function showPopup(msg, bgColor) {
            if (!msg) return;
            var popup = document.createElement('div');
            popup.textContent = msg;
            popup.style.position = 'fixed';
            popup.style.top = '20px';
            popup.style.right = '20px';
            popup.style.background = bgColor || '#4CAF50';
            popup.style.color = '#fff';
            popup.style.padding = '10px 14px';
            popup.style.borderRadius = '6px';
            popup.style.boxShadow = '0 4px 8px rgba(0,0,0,0.15)';
            popup.style.zIndex = 99999;
            popup.style.fontSize = '13px';
            document.body.appendChild(popup);

            setTimeout(function () {
                popup.style.transition = "opacity 0.5s";
                popup.style.opacity = 0;
                setTimeout(function () { popup.remove(); }, 500);
            }, 2000);
        }

        if (success) showPopup(success, '#4CAF50');
        else if (error) showPopup(error, '#E53935');
    })();
</script>
