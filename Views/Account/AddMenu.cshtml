@model CRM_Buddies_Task.Models.MenuModel

@{
    bool isEdit = Model != null && Model.MenuId > 0;
    ViewBag.Title = isEdit ? "Edit Menu" : "Add New Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 theme-sensitive-text fade-in">

    <!-- HEADER -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <div class="page-header shadow-sm">
                <h2 class="mb-2">
                    <i class="bi bi-menu-button-wide me-2"></i> @ViewBag.Title
                </h2>
                <p class="mb-0">
                    @(isEdit ? "Update menu information and status" : "Create a new navigation menu")
                </p>
            </div>
        </div>

        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a href="@Url.Action("ManageMenus", "Account")"
               class="btn-back">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <!-- FORM -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            @using (Html.BeginForm(isEdit ? "EditMenu" : "AddMenu", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (isEdit)
                {
                    @Html.HiddenFor(m => m.MenuId)
                }

                <div class="card shadow-sm">
                    <div class="card-body">

                        <!-- MENU NAME -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MenuName, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(
                                m => m.MenuName,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "Example: User Management"
                                })
                            @Html.ValidationMessageFor(m => m.MenuName, "", new { @class = "text-danger small" })
                        </div>

                        <!-- MENU URL -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MenuURL, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(
                                m => m.MenuURL,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "Example: /Account/Users"
                                })
                            @Html.ValidationMessageFor(m => m.MenuURL, "", new { @class = "text-danger small" })
                        </div>

                        <!-- ACTIVE -->
                        <div class="form-check mb-4">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label fw-semibold" })
                        </div>

                        @Html.HiddenFor(m => m.IsDeleted)

                        <!-- ACTION BUTTONS -->
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-success primary-action-btn">
                                <i class="bi bi-save me-1"></i>
                                @(isEdit ? "Update Menu" : "Create Menu")
                            </button>

                            <a href="@Url.Action("ManageMenus", "Account")"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- DETAILS (EDIT ONLY) -->
            @if (isEdit && Model.CreatedDate.HasValue)
            {
                <div class="card shadow-sm mt-4 fade-in">
                    <div class="card-body">
                        <h6 class="mb-3 fw-semibold">
                            <i class="bi bi-info-circle me-1"></i> Menu Information
                        </h6>

                        <p class="mb-1">
                            <strong>Created On:</strong>
                            @Model.CreatedDate.Value.ToString("dd MMM yyyy, HH:mm")
                        </p>

                        <p class="mb-0">
                            <strong>Status:</strong>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@{
    var success = TempData["SuccessMessage"] ?? "";
    var error = TempData["ErrorMessage"] ?? "";
}

<script>
    (function () {
        var success = @Html.Raw(Json.Encode(success));
        var error = @Html.Raw(Json.Encode(error));

        function showPopup(msg, bgColor) {
            if (!msg) return;
            var popup = document.createElement('div');
            popup.textContent = msg;
            popup.style.position = 'fixed';
            popup.style.top = '20px';
            popup.style.right = '20px';
            popup.style.background = bgColor || '#4CAF50';
            popup.style.color = '#fff';
            popup.style.padding = '10px 14px';
            popup.style.borderRadius = '6px';
            popup.style.boxShadow = '0 4px 8px rgba(0,0,0,0.15)';
            popup.style.zIndex = 99999;
            popup.style.fontSize = '13px';
            document.body.appendChild(popup);

            setTimeout(function () {
                popup.style.transition = "opacity 0.5s";
                popup.style.opacity = 0;
                setTimeout(function () { popup.remove(); }, 500);
            }, 2000);
        }

        if (success) showPopup(success, '#4CAF50');
        else if (error) showPopup(error, '#E53935');
    })();
</script>
