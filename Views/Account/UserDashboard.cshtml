@model CRM_Buddies_Task.Models.UserDashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(270deg, #4ca1af, #c4e0e5);
            background-size: 400% 400%;
            animation: gradientShift 10s ease infinite;
            padding: 30px 20px;
            border-radius: 12px;
            color: #fff;
            margin-bottom: 2rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease-out forwards;
        }

        body.dark-theme .page-header {
            background: linear-gradient(270deg, #1c1c1e, #2a2a2d);
            box-shadow: 0 4px 10px rgba(0,0,0,0.7);
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            border-radius: 10px;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-3px);
            }

            .card .card-title {
                font-weight: 600;
            }

        body.dark-theme .card {
            background-color: #1e1e1e;
            color: #f1f1f1;
            border: 1px solid #333;
        }

        body.dark-theme .text-primary {
            color: #84d1ff !important;
        }

        body.dark-theme .text-success {
            color: #a6ffb3 !important;
        }

        .btn-block {
            width: 100%;
        }

        .fade-in {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease-out forwards;
        }
    </style>
}

<div class="container mt-4 fade-in">
    <div class="page-header">
        <h2 class="display-6 mb-1">Welcome, <strong>@Model.FullName</strong></h2>
        <p class="mb-0">Here's your dashboard overview.</p>
    </div>

    <div class="row mb-3">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">City</h5>
                    <p class="card-text">@Model.City</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Registered On</h5>
                    <p class="card-text">@Model.CreatedDate.ToString("dd-MMM-yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-left-primary shadow-sm h-100 py-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-primary font-weight-bold mb-0">Applied Projects</h6>
                    </div>
                    <a href="@Url.Action("ProjectApply", "Account")" class="btn btn-outline-primary">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card border-left-success shadow-sm h-100 py-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-success font-weight-bold mb-0">Approved Projects</h6>
                    </div>
                    <a href="@Url.Action("YourProjects", "Account")" class="btn btn-outline-success">View</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-2">
            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-primary btn-block">
                <i class="bi bi-person-lines-fill"></i> View Profile
            </a>
        </div>
        <div class="col-md-4 mb-2">
            <a href="@Url.Action("ProjectApply", "Account")" class="btn btn-outline-info btn-block">
                <i class="bi bi-send-check"></i> Apply to Project
            </a>
        </div>
        <div class="col-md-4 mb-2">
            <a href="@Url.Action("YourProjects", "Account")" class="btn btn-outline-success btn-block">
                <i class="bi bi-folder-check"></i> Your Projects
            </a>
        </div>
    </div>
</div>
