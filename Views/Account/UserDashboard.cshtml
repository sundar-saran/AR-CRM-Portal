@model CRM_Buddies_Task.Models.UserDashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 fade-in">

    <!-- HEADER -->
    <div class="page-header shadow-sm mb-4">
        <h2 class="display-6 mb-1">Welcome, <strong>@Model.FullName</strong></h2>
        <p class="mb-0">Here's your dashboard overview.</p>
    </div>

    <!-- BASIC INFO CARDS -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">City</h5>
                    <p class="card-text">@Model.City</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Registered On</h5>
                    <p class="card-text">@Model.CreatedDate.ToString("dd-MMM-yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- PROJECT STATS CARDS -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-primary fw-bold mb-0">Applied Projects</h6>
                    </div>
                    <a href="@Url.Action("ProjectApply", "Account")" class="btn btn-outline-primary btn-sm">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-success fw-bold mb-0">Approved Projects</h6>
                    </div>
                    <a href="@Url.Action("YourProjects", "Account")" class="btn btn-outline-success btn-sm">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- QUICK ACTION BUTTONS -->
    <div class="row g-2">
        <div class="col-md-4">
            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-primary w-100 shadow-sm">
                <i class="bi bi-person-lines-fill me-1"></i> View Profile
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("ProjectApply", "Account")" class="btn btn-outline-info w-100 shadow-sm">
                <i class="bi bi-send-check me-1"></i> Apply to Project
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("YourProjects", "Account")" class="btn btn-outline-success w-100 shadow-sm">
                <i class="bi bi-folder-check me-1"></i> Your Projects
            </a>
        </div>
    </div>

</div>
