@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string fullName = ViewBag.FullName as string ?? "User";
    int roleId = ViewBag.RoleId != null ? (int)ViewBag.RoleId : 0;
    string roleName = roleId == 2 ? "Administrator" : "User";
}

<div class="container pt-4">

    <!-- Header -->
    <div class="welcome-header fade-up">
        <h1 class="theme-sensitive-text">Welcome, @fullName 👋</h1>
        <p class="theme-sensitive-text">
            You are logged in as <strong>@roleName</strong>
        </p>
    </div>

    <!-- Cards -->
    <div class="row justify-content-center">

        <!-- Dashboard -->
        <div class="col-lg-4 col-md-6 mb-4 fade-up" style="animation-delay:0.1s">
            <div class="welcome-card">
                <i class="bi bi-speedometer2 text-info"></i>
                <h5>Dashboard</h5>
                <p>Access insights and tools based on your role.</p>
                <a href="@Url.Action(roleId == 2 ? "AdminDashboard" : "UserDashboard", "Account")"
                   class="btn btn-info btn-sm">
                    Go to Dashboard
                </a>
            </div>
        </div>

        <!-- Profile -->
        <div class="col-lg-4 col-md-6 mb-4 fade-up" style="animation-delay:0.3s">
            <div class="welcome-card">
                <i class="bi bi-person-circle text-primary"></i>
                <h5>My Profile</h5>
                <p>View and update your personal information.</p>
                <a href="@Url.Action("Profile", "Account")"
                   class="btn btn-primary btn-sm">
                    View Profile
                </a>
            </div>
        </div>

    </div>
</div>
