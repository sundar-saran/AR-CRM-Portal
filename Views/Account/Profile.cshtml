@model CRM_Buddies_Task.Models.UserModel

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.6s ease-out forwards;
        }

        @@keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .profile-header {
            background: linear-gradient(270deg, #4ca1af, #c4e0e5);
            background-size: 400% 400%;
            animation: gradientShift 10s ease infinite;
            border-radius: 12px;
            padding: 40px 20px;
            transition: all 0.3s ease;
        }

        @@keyframes gradientShift {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }

        body.dark-theme .profile-header {
            background: linear-gradient(270deg, #1c1c1e, #2a2a2d);
        }

        .theme-label {
            font-weight: 600;
        }

        body.dark-theme .theme-label {
            color: #ffd700;
        }

        body.light-theme .theme-label {
            color: #0d6efd;
        }

        .btn-outline-dark.theme-sensitive-text {
            border-color: #6c757d;
        }

        body.dark-theme .btn-outline-dark.theme-sensitive-text {
            border-color: #ffd700;
            color: #ffd700;
        }

        body.dark-theme .btn-outline-dark.theme-sensitive-text:hover {
            background-color: #ffd700;
            color: #000;
        }

        body.light-theme .btn-outline-dark.theme-sensitive-text:hover {
            background-color: #0d6efd;
            color: #fff;
            border-color: #0d6efd;
        }

        .profile-card {
            border-radius: 12px;
            padding: 30px;
            background-color: var(--bs-light);
        }

        body.dark-theme .profile-card {
            background-color: #2c2c2e;
        }

        body.light-theme .profile-card {
            background-color: #f8f9fa;
        }
    </style>
}

<div class="container py-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="profile-header text-center text-white shadow-sm mb-4">
                <div class="rounded-circle bg-dark d-inline-flex align-items-center justify-content-center"
                     style="width: 100px; height: 100px; font-size: 40px; color: #fff;">
                    <i class="bi bi-person-circle"></i>
                </div>
                <h3 class="mt-3">@Model.FullName</h3>
                <p class="mb-0"><i class="bi bi-person-badge me-1"></i> @Model.RoleName</p>
            </div>

            <div class="profile-card shadow-sm fade-in">

                <div class="row mb-3">
                    <div class="col-sm-4 theme-label"> Email:</div>
                    <div class="col-sm-8">@Model.Email</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 theme-label"> Mobile:</div>
                    <div class="col-sm-8">@Model.Mobile</div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4 theme-label"> City:</div>
                    <div class="col-sm-8">@Model.City</div>
                </div>
                @if (Model.ReportingTo.HasValue && Model.ReportingTo.Value > 0)
                {
                    <div class="row mb-3">
                        <div class="col-sm-4 theme-label"> Reporting Manager And Id:</div>
                        <div class="col-sm-8">
                            @Model.ReportingManager (@Model.ReportingTo)
                        </div>
                    </div>
                }


                <div class="row mb-3">
                    <div class="col-sm-4 theme-label"> Registered On:</div>
                    <div class="col-sm-8">@Model.CreatedDate.ToString("dd-MMM-yyyy")</div>
                </div>

                <hr class="my-4" />

                <div class="text-end">
                    <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary me-2">
                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                    </a>

                    <a href="@Url.Action("Welcome", "Account")" class="btn btn-outline-dark ms-2 theme-sensitive-text">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
