@model List<CRM_Buddies_Task.Models.AccessEntry>

@{
    ViewBag.Title = "Manage Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .animated-header {
            padding: 1.75rem 2rem;
            border-radius: 0.75rem 0.75rem 0 0;
            color: #fff;
            font-weight: 600;
            background: linear-gradient(270deg, #007bff, #00c6ff, #007bff);
            background-size: 600% 600%;
            animation: gradientShift 20s ease infinite;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 8px 15px rgba(0, 123, 255, 0.3);
            user-select: none;
        }

        @@keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .card-container {
            background-color: var(--bs-body-bg, #fff);
            border-radius: 0.75rem;
            box-shadow: 0 4px 25px rgba(0,0,0,0.15);
            overflow: hidden;
            max-width: 1100px;
            margin: 2rem auto 4rem;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 1rem;
        }

        thead tr {
            background-color: #f8f9fa;
            color: #212529;
            font-weight: 600;
        }

        tbody tr {
            background-color: var(--bs-light, #fff);
            color: #212529;
            border-bottom: 1px solid #dee2e6;
            opacity: 0;
            transform: translateY(15px);
            animation: fadeInUp 0.5s ease forwards;
        }

        tbody tr:nth-child(1) { animation-delay: 0.1s; }
        tbody tr:nth-child(2) { animation-delay: 0.2s; }
        tbody tr:nth-child(3) { animation-delay: 0.3s; }
        tbody tr:nth-child(4) { animation-delay: 0.4s; }
        tbody tr:nth-child(5) { animation-delay: 0.5s; }
        tbody tr:nth-child(6) { animation-delay: 0.6s; }
        tbody tr:nth-child(7) { animation-delay: 0.7s; }
        tbody tr:nth-child(8) { animation-delay: 0.8s; }
        tbody tr:nth-child(9) { animation-delay: 0.9s; }
        tbody tr:nth-child(10) { animation-delay: 1s; }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        tbody tr:hover {
            background-color: #e9f5ff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        th, td {
            padding: 1rem 1.25rem;
            text-align: left;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 0.6rem;
            max-width: 180px;
        }

        select.form-select {
            padding: 0.35rem 0.5rem;
            border-radius: 0.375rem;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease;
            font-size: 0.95rem;
        }

        select.form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 6px rgba(0,123,255,0.5);
            outline: none;
        }

        button.btn-sm.btn-success {
            padding: 0.35rem 0;
            font-weight: 600;
            font-size: 0.9rem;
            box-shadow: 0 3px 6px rgba(0, 123, 255, 0.4);
            transition: background-color 0.25s ease;
            border-radius: 0.375rem;
        }

        button.btn-sm.btn-success:hover {
            background-color: #0056b3;
            box-shadow: 0 5px 15px rgba(0, 86, 179, 0.6);
        }

        button i {
            vertical-align: middle;
        }

        @@media (max-width: 768px) {
            .animated-header {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }
            form {
                max-width: 100%;
                flex-direction: row;
                gap: 0.5rem;
            }
            select.form-select {
                flex-grow: 1;
            }
            button.btn-sm.btn-success {
                width: 100px;
                padding: 0.35rem 0.5rem;
            }
        }
    </style>
}

<div class="card-container">
    <header class="animated-header">
        <h2>
            <i class="bi bi-person-gear me-2"></i> Access Management
        </h2>
        <a href="@Url.Action("ManageAccess", "Account")" class="btn btn-success shadow">
            <i class="fas fa-table me-1"></i> Access With Full Details
        </a>
    </header>

    <section class="p-4">
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 20%;">User</th>
                        <th style="width: 25%;">Email</th>
                        <th style="width: 15%;">Mobile</th>
                        <th style="width: 15%;">Current Role</th>
                        <th style="width: 20%;">Change Role</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].FullName</td>
                            <td>@Model[i].Email</td>
                            <td>@Model[i].Mobile</td>
                            <td>@Model[i].RoleName</td>
                            <td>
                                @using (Html.BeginForm("UpdateUserRole", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("userId", Model[i].UserId)

                                    @Html.DropDownList("newRoleId", ViewBag.RoleList as List<SelectListItem>,
                                        new { @class = "form-select", @value = Model[i].RoleId.ToString() })

                                    <button type="submit" class="btn btn-sm btn-success" aria-label="Update Role for @Model[i].FullName">
                                        <i class="bi bi-save2-fill me-1"></i> Update
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
