@model List<CRM_Buddies_Task.Models.AccessEntry>

@{
    ViewBag.Title = "Manage Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4 theme-sensitive-text fade-in">

    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <div class="page-header shadow-sm">
                <h2 class="mb-2">
                    <i class="bi bi-person-gear me-2"></i> Role Management
                </h2>
                <p class="mb-0">
                    Assign and update user roles across the platform
                </p>
            </div>
        </div>

        <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a href="@Url.Action("ManageAccess", "Account")"
               class="btn btn-success primary-action-btn shadow-sm">
                <i class="bi bi-table me-1"></i> Detailed Access View
            </a>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive shadow-sm fade-in">
        <table class="table-hover custom-table mb-0">
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>User</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Current Role</th>
                    <th>Update Role</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].FullName</td>
                            <td>@Model[i].Email</td>
                            <td>@Model[i].Mobile</td>
                            <td>
                                @*<span class="badge bg-info">*@
                                <span class="badge @(Model[i].RoleName == "Admin" ? "bg-success" : "bg-info")">
                                    @Model[i].RoleName
                                </span>
                            </td>
                            <td>
                                @using (Html.BeginForm("UpdateUserRole", "Account", FormMethod.Post, new { @class = "inline-form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("userId", Model[i].UserId)

                                    @Html.DropDownList(
                                        "newRoleId",
                                        ViewBag.RoleList as List<SelectListItem>,
                                        new { @class = "form-select" }
                                    )

                                    <button type="submit"
                                            class="btn btn-update"
                                            title="Update role for @Model[i].FullName">
                                        <i class="bi bi-save2-fill me-1"></i> Update
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4">
                            No users available
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- TOAST MESSAGE -->
@{
    var success = TempData["SuccessMessage"] ?? "";
    var error = TempData["ErrorMessage"] ?? "";
}

<script>
    (function () {
        var success = @Html.Raw(Json.Encode(success));
        var error = @Html.Raw(Json.Encode(error));

        function showToast(msg, bg) {
            if (!msg) return;

            const toast = document.createElement('div');
            toast.innerText = msg;
            toast.style.position = 'fixed';
            toast.style.top = '20px';
            toast.style.right = '20px';
            toast.style.background = bg;
            toast.style.color = '#fff';
            toast.style.padding = '10px 16px';
            toast.style.borderRadius = '6px';
            toast.style.boxShadow = '0 4px 8px rgba(0,0,0,0.2)';
            toast.style.zIndex = 9999;
            toast.style.fontSize = '13px';

            document.body.appendChild(toast);

            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => toast.remove(), 400);
            }, 2500);
        }

        if (success) showToast(success, '#28a745');
        else if (error) showToast(error, '#dc3545');
    })();
</script>
